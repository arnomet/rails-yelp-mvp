 <%# <%= link_to "New Review",   new_restaurant_review_path, class: "btn btn-primary" %> %>

<table class="table">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Content</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.content %></td>
        <td><%= link_to "Show", review_path(review), class: "btn btn-secondary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
